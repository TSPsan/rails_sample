<!-- 検索機能 -->
<div class="search_form">
  <%= form_tag(yield(:path), method: :get) do %>
    <div class="col-md-4"></div>
    <div class="col-md-3">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: yield(:search_name) %>
    </div>
    <div class="col-md-1">
      <%= submit_tag("検索", class: "btn btn-info") %>
    </div>
  <% end %>
</div>
